<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMovieImagePopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        tools:src="@mipmap/ic_launcher" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/ivYoutubePopularMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="Captain America"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivMovieImagePopular"
        android:layout_toEndOf="@+id/ivMovieImagePopular" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Following the events of Age of..."
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivMovieImagePopular"
        android:layout_toEndOf="@+id/ivMovieImagePopular" />

</RelativeLayout>