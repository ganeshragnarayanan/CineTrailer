<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:adjustViewBounds="true">


    <ImageView
        android:id="@+id/ivMovieImagePopular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        tools:src="@mipmap/ic_launcher" />



    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/ivYoutubePopularMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_alignLeft="@+id/ivMovieImagePopular"
        android:layout_alignRight="@+id/ivMovieImagePopular"
        android:layout_below="@id/ivMovieImagePopular"/>

</RelativeLayout>