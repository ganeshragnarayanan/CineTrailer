<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.widget.Toolbar
        android:id="@+id/my_toolbarDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2B71B1"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivMovieImageDetail"
        android:layout_below="@+id/my_toolbarDetail"
        tools:src="@mipmap/ic_launcher"/>

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/ivYoutubeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/tvTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivMovieImageDetail"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="Captain America" />

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTitleDetail"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="Captain America" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvReleaseDate"
        android:numStars="10"
        android:rating="2.0"
        android:stepSize="1.0" />
    <TextView
        android:id="@+id/tvOverviewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Following the events of Age of..."
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar" />

</RelativeLayout>